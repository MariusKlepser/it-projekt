<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  
  <!-- Example servlet loaded into servlet container -->
	<servlet>
	  <servlet-name>BOMAdministration</servlet-name>
	  <servlet-class>
	    de.hdm.team7.server.BOMAdministrationImpl
	  </servlet-class>
	</servlet>
	<servlet-mapping>
	  <servlet-name>BOMAdministration</servlet-name>
	  <url-pattern>/it_projekt/bomadministration</url-pattern>
	</servlet-mapping>  
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>It_projekt.html</welcome-file>
  </welcome-file-list>  

</web-app>
